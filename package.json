{
  "name": "svelte-bay",
  "version": "0.1.0",
  "description": "The simplest, most developer-friendly portal system for Svelte 5. Teleport content anywhere in your app with zero config using Svelte 5 Runes.",
  "author": {
    "name": "Teddy Hartling",
    "url": "https://github.com/uhteddy"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uhteddy/svelte-bay.git"
  },
  "homepage": "https://github.com/uhteddy/svelte-bay#readme",
  "bugs": {
    "url": "https://github.com/uhteddy/svelte-bay/issues"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && bun run prepack",
    "preview": "vite preview",
    "prepare": "bun x svelte-kit sync || echo ''",
    "prepack": "bun x svelte-kit sync && bun x svelte-package && bun x publint",
    "check": "bun x svelte-kit sync && bun x svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "bun x svelte-kit sync && bun x svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "vitest",
    "test": "npm run test:unit -- --run"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./vite": {
      "types": "./dist/vite.d.ts",
      "import": "./dist/vite.js"
    }
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^7.0.0",
    "@sveltejs/kit": "^2.48.5",
    "@sveltejs/package": "^2.5.6",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@types/node": "^24.10.1",
    "@vitest/browser-playwright": "^4.0.10",
    "playwright": "^1.56.1",
    "publint": "^0.3.15",
    "svelte": "^5.43.8",
    "svelte-check": "^4.3.4",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.10",
    "vitest-browser-svelte": "^2.0.1"
  },
  "keywords": [
    "svelte",
    "svelte5",
    "sveltekit",
    "portal",
    "teleport",
    "runes",
    "context",
    "ui",
    "components",
    "typescript",
    "ssr",
    "layout",
    "slot",
    "bay"
  ],
  "publishConfig": {
    "access": "public"
  }
}
